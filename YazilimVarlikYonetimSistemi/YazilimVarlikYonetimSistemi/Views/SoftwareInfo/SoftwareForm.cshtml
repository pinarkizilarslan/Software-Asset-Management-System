@model YazilimVarlikYonetimSistemi.Models.Model.Software
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Save", "SoftwareInfo", FormMethod.Post))
{
    <div class="form-group">
         Yazılım İsmi
        @Html.TextBoxFor(model => model.S_Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Versiyon
        @Html.TextBoxFor(model => model.S_Version, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Sözleşme NO
        @Html.TextBoxFor(model => model.Agreement_ID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Lisans Tipi
        @Html.TextBoxFor(model => model.License_Type, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Lisans Opsiyonu
        @Html.TextBoxFor(model => model.License_Option, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Yazılım Bedeli
        @Html.TextBoxFor(model => model.Software_Cost, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Bakım Bedeli
        @Html.TextBoxFor(model => model.Maintenance_Cost, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(model => model.In_House) Kurum içi Geliştirme
        </label>
    </div>
    <div class="radio">
        <label>
            @Html.RadioButtonFor(model => model.Open_Source_Code, true) Açık Kaynak Kod
        </label>
        <br />
        <label>
            @Html.RadioButtonFor(model => model.Open_Source_Code, false) Kapalı Kaynak Kod
        </label>
    </div>
    @Html.HiddenFor(model => model.S_ID)
    <button type="submit" class="btn btn-default">Kaydet</button>
}

