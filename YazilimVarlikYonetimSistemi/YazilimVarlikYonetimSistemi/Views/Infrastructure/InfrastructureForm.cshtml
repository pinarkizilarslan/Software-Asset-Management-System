@model YazilimVarlikYonetimSistemi.Models.Model.Infrastructure
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Save", "Infrastructure", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(model => model.OS)
        @Html.TextBoxFor(model => model.OS, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Min_RAM)
        @Html.TextBoxFor(model => model.Min_RAM, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Min_Storeage)
        @Html.TextBoxFor(model => model.Min_Storeage, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.S_ID)
        @Html.TextBoxFor(model => model.S_ID, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(model => model.I_ID)
    <button type="submit" class="btn btn-default">Kaydet</button>
}

