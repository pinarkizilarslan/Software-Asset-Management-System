@using YazilimVarlikYonetimSistemi.Models.Model
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table id="Tablo" class="table table-bordered">
    <thead>
        <tr>
            <th>Departman Adı</th>
            <th>Süre Raporu</th>
            <th>Maliyet Raporu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
        <tr>
            <td>@dept.D_Name</td>
            <td><a class="btn btn-info" href="/Report/TimeReport/@dept.D_ID">Rapor Ver</a></td>
            <td><a class="btn btn-success" href="/Report/CostReport/@dept.D_ID">Rapor Ver</a></td>
        </tr>
        }
    </tbody>
</table>
